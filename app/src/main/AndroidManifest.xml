<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sanskruti.volotek">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <queries>
        <package android:name="com.whatsapp" />
        <package android:name="com.facebook.katana" />
        <package android:name="com.whatsapp.w4b" />
    </queries>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.activities.MyBusinessCategoryActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <activity
            android:name=".ui.activities.BusinessSubCatActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".ui.activities.PrivacyActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.ProfileEditActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.BusinessCategoryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.ContactUsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.SettingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.SubsPlanActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.AddBusinessActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.PreviewActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.CategoryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.FestivalActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.CustomSplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.activities.PlanDetailActivity" />
        <activity android:name=".custom.animated_video.activities.SearchActivity" />
        <activity android:name=".custom.animated_video.activities.SelectImageActivity" />
        <activity android:name=".custom.animated_video.activities.FavouriteActivity" />
        <activity android:name=".custom.animated_video.activities.SelectImageOneByOne" />
        <activity android:name=".custom.animated_video.activities.SelectMusicActivity" />
        <activity android:name=".custom.animated_video.activities.TemplatePreview" />
        <activity android:name=".custom.animated_video.activities.VideoEditorActivity" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />

        <activity
            android:name=".custom.poster.activity.ThumbnailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".custom.poster.activity.BaseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".custom.poster.activity.ShareImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".custom.poster.activity.BackgrounImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".custom.poster.views.eraser.StickerRemoveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".custom.poster.activity.PosterSeeMoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".custom.poster.imagecroper.ManualBGRemoverActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".custom.poster.imagecroper.CropActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.activities.DailyPostActivity" />
        <activity android:name=".ui.activities.GreetingActivity" />
        <activity android:name=".custom.animated_video.activities.AnimatedVideoActivity" />
        <activity android:name=".ui.activities.DigitalCardActivity" />
        <activity android:name=".ui.activities.PreviewDigitalCardActivity" />
        <activity android:name=".custom.animated_video.activities.PreviewVideoTemplate" />
        <activity android:name=".ui.activities.ServicesActivity" />

        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="@string/rajorpay_key" />
        <meta-data
            android:name="com.onesignal.NotificationServiceExtension"
            android:value="com.astarconcepts.brandbanao.utils.NotificationServiceExtension" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true"
            android:screenOrientation="portrait"
            tools:replace="android:authorities">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>