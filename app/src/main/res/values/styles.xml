<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogAnimation" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/slideup</item>
        <item name="android:windowExitAnimation">@anim/slidedown</item>
    </style>

    <style name="AppTheme.Progressbar">

        <item name="colorAccent">#3F51B5</item>

    </style>

    <style name="VideoQualityDialogAnimation" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <style name="AppTheme.AdAttribution">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#ffcc66</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Ad</item>
        <item name="android:height">15dp</item>
        <item name="android:width">15dp</item>
    </style>

    <style name="Progressbar.White" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="MyDialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ThemeWithCorners" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/rounded_layout</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="DialogAnimation_">
        <item name="android:windowEnterAnimation">@anim/up_slide</item>
        <item name="android:windowExitAnimation">@anim/bottom_slide</item>
    </style>

    <style name="MyHintStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/black_1000</item>
        <item name="colorControlHighlight">@color/blue_color</item>
    </style>>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="backgroundColor">@color/black</item>

    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="android:background">@color/bg_screen</item>

    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeTopLeft">40dp</item>

    </style>

    <style name="MyCustomAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>