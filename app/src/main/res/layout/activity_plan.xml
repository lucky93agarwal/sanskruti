<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="subdata"
            type="com.sanskruti.volotek.model.SubsPlanItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_screen"
        tools:context=".ui.activities.PlanDetailActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"
                android:background="@color/bg_screen"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginVertical="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_4sdp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/toolbar">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/bg_screen">


                            <TextView
                                android:id="@+id/tv_plan_selected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:text="@string/plan_selected"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <LinearLayout
                                android:id="@+id/linearLayout14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:background="@drawable/edit_bg"
                                android:paddingVertical="@dimen/_8sdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_plan_selected">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginVertical="@dimen/_8sdp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_plan_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:text="@string/plan_selected"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sdp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/tv_plan_selected" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_8sdp"
                                    android:layout_weight="1"
                                    android:gravity="center|end"
                                    android:orientation="horizontal">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/tv_currency_2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_2sdp"
                                            android:layout_marginEnd="@dimen/_2sdp"
                                            android:text="₹"
                                            android:textSize="@dimen/_14sdp"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toStartOf="@+id/tv_discount"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <TextView
                                            android:id="@+id/tv_discount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/_2sdp"
                                            android:text="455"
                                            android:textAllCaps="true"
                                            android:textSize="@dimen/_14sdp"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <View
                                            android:layout_width="@dimen/_40sdp"
                                            android:layout_height="@dimen/_1sdp"
                                            android:layout_centerVertical="true"
                                            android:background="@color/black30"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                    </androidx.constraintlayout.widget.ConstraintLayout>


                                    <TextView
                                        android:id="@+id/tv_currency_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:text="₹"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_ori_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:text="449"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_8sdp"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/linearLayout14">

                                <RelativeLayout
                                    android:id="@+id/rl_open"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible">

                                    <TextView
                                        android:id="@+id/tv_have_p"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:text="@string/have_a_promo_code"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />


                                    <LinearLayout
                                        android:id="@+id/llApplyCode"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tv_have_p"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@drawable/edit_bg"
                                        android:orientation="horizontal">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:id="@+id/cs_applied"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="@dimen/_10sdp"
                                            android:visibility="gone">


                                            <ImageView
                                                android:id="@+id/imageView21"
                                                android:layout_width="@dimen/_20sdp"
                                                android:layout_height="@dimen/_20sdp"
                                                android:layout_marginTop="@dimen/_8sdp"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:srcCompat="@drawable/cpv_preset_checked"
                                                app:tint="@color/green_A700" />

                                            <TextView
                                                android:id="@+id/tv_applied_code"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_5sdp"
                                                android:text="@string/applied_code"
                                                app:layout_constraintBottom_toBottomOf="@+id/imageView21"
                                                app:layout_constraintStart_toEndOf="@+id/imageView21"
                                                app:layout_constraintTop_toTopOf="@+id/imageView21" />

                                            <TextView
                                                android:id="@+id/tv_code"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_5sdp"
                                                android:text="BUY40"
                                                android:textAllCaps="true"
                                                app:layout_constraintBottom_toBottomOf="@+id/tv_applied_code"
                                                app:layout_constraintStart_toEndOf="@+id/tv_applied_code"
                                                app:layout_constraintTop_toTopOf="@+id/tv_applied_code" />

                                            <TextView
                                                android:id="@+id/tv_code_dec"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:text="@string/discount_on"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="@+id/imageView21"
                                                app:layout_constraintTop_toBottomOf="@+id/imageView21" />

                                            <View
                                                android:id="@+id/divider4"
                                                android:layout_width="1dp"
                                                android:layout_height="0dp"
                                                android:layout_marginTop="@dimen/_8sdp"
                                                android:background="@color/gray"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/tv_code_dec" />


                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                        <LinearLayout
                                            android:id="@+id/linearLayout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tv_have_p"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:orientation="horizontal"
                                            android:paddingVertical="@dimen/_5sdp">

                                            <EditText
                                                android:id="@+id/et_promo"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/_28sdp"
                                                android:layout_marginHorizontal="@dimen/_8sdp"
                                                android:layout_marginVertical="@dimen/_2sdp"
                                                android:layout_weight="1"
                                                android:background="@color/transparent_color"
                                                android:ems="8"
                                                android:hint="@string/enter_promo_code"
                                                android:inputType="textPersonName"
                                                android:paddingHorizontal="@dimen/_5sdp"
                                                android:textSize="12sp" />

                                            <TextView
                                                android:id="@+id/btn_apply"
                                                android:layout_width="wrap_content"
                                                android:layout_height="@dimen/_28sdp"
                                                android:layout_marginVertical="@dimen/_2sdp"
                                                android:layout_marginStart="@dimen/_15sdp"
                                                android:gravity="center"
                                                android:paddingHorizontal="@dimen/_30sdp"
                                                android:text="@string/apply"
                                                android:textAllCaps="false"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_12sdp" />

                                        </LinearLayout>

                                    </LinearLayout>


                                    <TextView
                                        android:id="@+id/tv_error"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/llApplyCode"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:text="@string/have_a_promo_code"
                                        android:textColor="@color/red_900"
                                        android:visibility="gone" />


                                </RelativeLayout>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:text="Order Summary"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edit_bg">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:id="@+id/llPlan"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tv_plan_name2"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginHorizontal="@dimen/_10sdp"
                                                android:layout_marginVertical="@dimen/_5sdp"
                                                android:layout_weight="1"
                                                android:text="@string/plan_selected"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                            <TextView
                                                android:id="@+id/tv_currency3"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="@dimen/_5sdp"
                                                android:text="₹"
                                                android:textSize="@dimen/_15sdp"
                                                app:layout_constraintBottom_toBottomOf="@+id/tv_price"
                                                app:layout_constraintEnd_toStartOf="@+id/tv_price"
                                                app:layout_constraintTop_toTopOf="@+id/tv_price" />

                                            <TextView
                                                android:id="@+id/tv_ori_price2"
                                                android:layout_width="@dimen/_60sdp"
                                                android:layout_height="wrap_content"
                                                android:gravity="start"
                                                android:text="1200"
                                                android:textSize="@dimen/_15sdp"
                                                app:layout_constraintBottom_toBottomOf="@+id/tv_total_payable"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintTop_toTopOf="@+id/tv_total_payable" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/llDis"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal"
                                            android:visibility="gone">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginHorizontal="@dimen/_10sdp"
                                                android:layout_marginVertical="@dimen/_5sdp"
                                                android:layout_weight="1"
                                                android:text="Promo Code Applied"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="@dimen/_5sdp"
                                                android:text="₹"
                                                android:textSize="@dimen/_15sdp"
                                                app:layout_constraintBottom_toBottomOf="@+id/tv_price"
                                                app:layout_constraintEnd_toStartOf="@+id/tv_price"
                                                app:layout_constraintTop_toTopOf="@+id/tv_price" />

                                            <TextView
                                                android:id="@+id/tv_code_dec2"
                                                android:layout_width="@dimen/_60sdp"
                                                android:layout_height="wrap_content"
                                                android:gravity="start"
                                                android:text="200"
                                                android:textSize="@dimen/_15sdp"
                                                app:layout_constraintBottom_toBottomOf="@+id/tv_total_payable"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintTop_toTopOf="@+id/tv_total_payable" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tv_total_payable"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginHorizontal="@dimen/_10sdp"
                                                android:layout_marginVertical="@dimen/_10sdp"
                                                android:layout_weight="1"
                                                android:text="@string/total_payable"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_15sdp"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                            <TextView
                                                android:id="@+id/tv_currency"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="@dimen/_5sdp"
                                                android:text="₹"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_15sdp"
                                                app:layout_constraintBottom_toBottomOf="@+id/tv_price"
                                                app:layout_constraintEnd_toStartOf="@+id/tv_price"
                                                app:layout_constraintTop_toTopOf="@+id/tv_price" />

                                            <TextView
                                                android:id="@+id/tv_price"
                                                android:layout_width="@dimen/_60sdp"
                                                android:layout_height="wrap_content"
                                                android:gravity="start"
                                                android:text="1000"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_15sdp"
                                                app:layout_constraintBottom_toBottomOf="@+id/tv_total_payable"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintTop_toTopOf="@+id/tv_total_payable" />


                                        </LinearLayout>

                                    </LinearLayout>


                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView6">

                        <RelativeLayout
                            android:id="@+id/cbRazorPay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_border2x"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="5dp"
                            tools:layout_editor_absoluteX="15dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="20dp"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:id="@+id/card_rz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="@string/card_upi_net_banking"
                                    android:textColor="@color/acc_gray"
                                    android:textSize="@dimen/_12sdp"
                                    android:fontFamily="@font/nunito_sans_semibold"

                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/checkRazor"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <CheckBox
                                    android:id="@+id/checkRazor"
                                    style="@style/checkbox"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/cbStripe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_border2x"
                            android:visibility="visible"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="5dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="20dp"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:id="@+id/card_st"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="@string/card_stripe"
                                    android:textColor="@color/acc_gray"
                                    android:textSize="@dimen/_12sdp"
                                    android:fontFamily="@font/nunito_sans_semibold"

                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/checkStripe"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <CheckBox
                                    android:id="@+id/checkStripe"
                                    style="@style/checkbox"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/cbPaytm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_border2x"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="5dp"
                            tools:layout_editor_absoluteX="15dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="20dp"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:id="@+id/card_pt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="@string/card_paytm"
                                    android:textColor="@color/acc_gray"
                                    android:textSize="@dimen/_12sdp"
                                   android:fontFamily="@font/nunito_sans_semibold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/checkPaytm"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <CheckBox
                                    android:id="@+id/checkPaytm"
                                    style="@style/checkbox"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_continue"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:background="@drawable/round_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_60sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pay Now"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:textColor="@color/al_white"
                            app:fontFamily="sans-serif-medium" />

                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </RelativeLayout>


        <ProgressBar
            android:id="@+id/pb_payment"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginVertical="@dimen/_3sdp"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
